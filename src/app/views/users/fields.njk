
<div class="item">
  <div>Nome completo</div>
  <div>
    <input type="text" name="name" placeholder="Digite o seu nome completo" value="{{ user.name }}">
  </div>
</div>

<div class="item">
  <div>e-mail</div>
  <div class='input'>
    <input type="email" name="email" placeholder="Digite o seu email" value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')">
  </div>
</div>

<div class="item">
  <div>Senha</div>
  <div class='input'>
    <input type="password" name="password" placeholder="Digite uma senha segura" value="{{ user.password }}">
  </div>
</div>

{% if not user.id %}

<div class="item">
  <div>Repita sua senha</div>
  <div class='input'>
    <input type="password" name="passwordRepeat" placeholder="Digite sua senha novamente">
  </div>
</div>

{% endif %}

<div class="item">
  <div>CPF ou CNPJ</div>
  <div>
    <input type="text" name="cpf_cnpj" placeholder="Digite seu documento" value='{{user.cpf_cnpj}}' onkeydown="Mask.apply(this, 'cpfCnpj')">
  </div>
</div>

<div class="item">
  <div>CEP</div>
  <div>
    <input type="text" name="cep" placeholder="33333-333" value='{{user.cep}}' onkeydown="Mask.apply(this, 'cep')">
  </div>
</div>

<div class="item">
  <div>Endereço completo</div>
  <div>
    <input type="text" name="address" placeholder="Digite seu endereço completo" value='{{user.adress}}'>
  </div>
</div>